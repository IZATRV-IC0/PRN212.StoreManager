<Window x:Class="StoreManager.ManageCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreManager"
        mc:Ignorable="d"
        Title="Manage Customer" Height="600" Width="500" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource HeaderBorderStyle}">
            <TextBlock x:Name="lblEditor" Text="Manage Customer" 
                       Style="{StaticResource HeaderStyle}"/>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
            <StackPanel>
                <!-- Customer ID -->
                <StackPanel x:Name="pnlCustomerID" Margin="0,0,0,15">
                    <TextBlock x:Name="lblCustomerID" Text="Customer ID" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtCustomerID" 
                             Style="{StaticResource CommonTextBoxStyle}"
                             IsReadOnly="True" Background="#F0F0F0"/>
                </StackPanel>

                <!-- Company Name -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Company Name *" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtCompanyName" 
                             Style="{StaticResource CommonTextBoxStyle}"/>
                </StackPanel>

                <!-- Contact Name -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Contact Name *" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtContactName" 
                             Style="{StaticResource CommonTextBoxStyle}"/>
                </StackPanel>

                <!-- Contact Title -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Contact Title" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtContactTitle" 
                             Style="{StaticResource CommonTextBoxStyle}"/>
                </StackPanel>

                <!-- Address -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Address" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtAddress" 
                             Style="{StaticResource CommonTextBoxStyle}"
                             Height="40" AcceptsReturn="True" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Phone -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Phone" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtPhone" 
                             Style="{StaticResource CommonTextBoxStyle}"/>
                </StackPanel>

                <!-- Required fields note -->
                <TextBlock Text="* Required fields" 
                           FontSize="11" FontStyle="Italic" 
                           Foreground="#666666" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <Button x:Name="btn_SaveCustomer" Content="💾 Save" 
                        Style="{StaticResource SuccessButtonStyle}" 
                        Width="120" Height="40" Margin="0,0,15,0"
                        Click="btn_SaveCustomer_Click"/>
                <Button x:Name="btn_CancelCustomer" Content="❌ Cancel" 
                        Style="{StaticResource CommonButtonStyle}" 
                        Width="120" Height="40" Background="#6C757D"
                        Click="btn_CancelCustomer_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>