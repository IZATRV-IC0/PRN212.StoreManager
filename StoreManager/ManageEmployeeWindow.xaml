<Window x:Class="StoreManager.ManageEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Employee Window" Height="500" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="lblEmployeeID" Content="Employee ID" FontSize="16" HorizontalAlignment="Left" Margin="40,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmployeeID" HorizontalAlignment="Left" Margin="180,45,0,0" Width="200" VerticalAlignment="Top"/>

        <Label Content="Name" FontSize="16" HorizontalAlignment="Left" Margin="40,80,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="180,85,0,0" Width="200" VerticalAlignment="Top"/>

        <Label Content="Username" FontSize="16" HorizontalAlignment="Left" Margin="40,120,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="180,125,0,0" Width="200" VerticalAlignment="Top"/>

        <Label Content="Password" FontSize="16" HorizontalAlignment="Left" Margin="40,160,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="180,165,0,0" Width="200" VerticalAlignment="Top"/>

        <Label Content="Job Title" FontSize="16" HorizontalAlignment="Left" Margin="40,200,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtJobTitle" HorizontalAlignment="Left" Margin="180,205,0,0" Width="200" VerticalAlignment="Top"/>

        <Label Content="Birth Date" FontSize="16" HorizontalAlignment="Left" Margin="40,240,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dpBirthDate" HorizontalAlignment="Left" Margin="180,245,0,0" Width="200" VerticalAlignment="Top"/>

        <Label Content="Hire Date" FontSize="16" HorizontalAlignment="Left" Margin="40,280,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dpHireDate" HorizontalAlignment="Left" Margin="180,285,0,0" Width="200" VerticalAlignment="Top"/>

        <Label Content="Address" FontSize="16" HorizontalAlignment="Left" Margin="40,320,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Margin="180,325,0,0" Width="200" VerticalAlignment="Top"/>

        <Label Content="Role" FontSize="16" HorizontalAlignment="Left" Margin="40,360,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtRoleNum" HorizontalAlignment="Left" Margin="180,365,0,0" Width="200" VerticalAlignment="Top"/>

        <Button x:Name="btn_SaveEmployee" Content="Save" HorizontalAlignment="Left" Margin="180,420,0,0" Width="100" VerticalAlignment="Top" Click="btn_SaveEmployee_Click"/>
        <Button x:Name="btn_CancelEmployee" Content="Cancel" HorizontalAlignment="Left" Margin="300,420,0,0" Width="100" VerticalAlignment="Top" Click="btn_CancelEmployee_Click"/>

        <Label x:Name="lblEditor" Content="Create/Update Employee" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="40,0,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
