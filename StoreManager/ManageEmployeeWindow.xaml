<Window x:Class="StoreManager.ManageEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreManager"
        mc:Ignorable="d"
        Title="Manage Employee" Height="650" Width="500" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource HeaderBorderStyle}">
            <TextBlock x:Name="lblEditor" Text="Manage Employee" 
                       Style="{StaticResource HeaderStyle}"/>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
            <StackPanel>
                <!-- Employee ID -->
                <StackPanel x:Name="pnlEmployeeID" Margin="0,0,0,15">
                    <TextBlock x:Name="lblEmployeeID" Text="Employee ID" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtEmployeeID" 
                             Style="{StaticResource CommonTextBoxStyle}"
                             IsReadOnly="True" Background="#F0F0F0"/>
                </StackPanel>

                <!-- Employee Name -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Employee Name *" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtEmployeeName" 
                             Style="{StaticResource CommonTextBoxStyle}"/>
                </StackPanel>

                <!-- User Name -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="User Name *" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtUserName" 
                             Style="{StaticResource CommonTextBoxStyle}"/>
                </StackPanel>

                <!-- Password -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Password *" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <PasswordBox x:Name="txtPassword" 
                                 Height="35" FontSize="14" Padding="10,8"
                                 BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,0,10"/>
                </StackPanel>

                <!-- Job Title -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Job Title" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtJobTitle" 
                             Style="{StaticResource CommonTextBoxStyle}"/>
                </StackPanel>

                <!-- Birth Date -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Birth Date" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <DatePicker x:Name="dpBirthDate" 
                                Height="35" FontSize="14" Margin="0,0,0,10"/>
                </StackPanel>

                <!-- Hire Date -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Hire Date" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <DatePicker x:Name="dpHireDate" 
                                Height="35" FontSize="14" Margin="0,0,0,10"/>
                </StackPanel>

                <!-- Address -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Address" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtAddress" 
                             Style="{StaticResource CommonTextBoxStyle}"
                             Height="40" AcceptsReturn="True" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Role -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Role *" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <ComboBox x:Name="cboRole" 
                              Height="35" FontSize="14" Margin="0,0,0,10">
                        <ComboBoxItem Content="Admin" Tag="1"/>
                        <ComboBoxItem Content="Manager" Tag="2"/>
                        <ComboBoxItem Content="Staff" Tag="3"/>
                    </ComboBox>
                </StackPanel>

                <!-- Required fields note -->
                <TextBlock Text="* Required fields" 
                           FontSize="11" FontStyle="Italic" 
                           Foreground="#666666" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <Button x:Name="btn_SaveEmployee" Content="💾 Save" 
                        Style="{StaticResource SuccessButtonStyle}" 
                        Width="120" Height="40" Margin="0,0,15,0"
                        Click="btn_SaveEmployee_Click"/>
                <Button x:Name="btn_CancelEmployee" Content="❌ Cancel" 
                        Style="{StaticResource CommonButtonStyle}" 
                        Width="120" Height="40" Background="#6C757D"
                        Click="btn_CancelEmployee_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>