<Window x:Class="StoreManager.ManageOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreManager"
        mc:Ignorable="d"
        Title="Manage Order" Height="500" Width="500" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource HeaderBorderStyle}">
            <TextBlock x:Name="lblEditor" Text="Manage Order" 
                       Style="{StaticResource HeaderStyle}"/>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
            <StackPanel>
                <!-- Order ID -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Order ID" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtOrderId" 
                             Style="{StaticResource CommonTextBoxStyle}"
                             IsReadOnly="True" Background="#F0F0F0"/>
                </StackPanel>

                <!-- Customer -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Customer" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtCustomer" 
                             Style="{StaticResource CommonTextBoxStyle}"
                             IsReadOnly="True" Background="#F0F0F0"/>
                </StackPanel>

                <!-- Employee -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Employee *" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <ComboBox x:Name="cbEmployee" 
                              Height="35" FontSize="14" Margin="0,0,0,10"
                              DisplayMemberPath="Name" 
                              SelectedValuePath="EmployeeId"/>
                </StackPanel>

                <!-- Order Date -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Order Date *" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <DatePicker x:Name="dpOrderDate" 
                                Height="35" FontSize="14" Margin="0,0,0,10"/>
                </StackPanel>

                <!-- Required fields note -->
                <TextBlock Text="* Required fields" 
                           FontSize="11" FontStyle="Italic" 
                           Foreground="#666666" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <Button x:Name="btn_SaveOrder" Content="💾 Save" 
                        Style="{StaticResource SuccessButtonStyle}" 
                        Width="120" Height="40" Margin="0,0,15,0"
                        Click="btn_SaveOrder_Click"/>
                <Button x:Name="btn_CancelOrder" Content="❌ Cancel" 
                        Style="{StaticResource CommonButtonStyle}" 
                        Width="120" Height="40" Background="#6C757D"
                        Click="btn_CancelOrder_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>