<Window x:Class="StoreManager.ManageOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Order" Height="600" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="lblEditor" Content="Update Order" FontSize="24" FontWeight="Bold" 
               HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top"/>

        <!-- Order Information -->
        <GroupBox Header="Order Information" Margin="20,50,20,0" Height="150" VerticalAlignment="Top">
            <Grid>
                <Label Content="Order ID:" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtOrderId" IsEnabled="False" HorizontalAlignment="Left" Margin="100,20,0,0" Width="100" VerticalAlignment="Top"/>

                <Label Content="Customer:" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtCustomer" IsEnabled="False" HorizontalAlignment="Left" Margin="100,50,0,0" Width="200" VerticalAlignment="Top"/>

                <Label Content="Employee:" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top"/>
                <ComboBox x:Name="cbEmployee" HorizontalAlignment="Left" Margin="100,80,0,0" Width="200" VerticalAlignment="Top"
                         DisplayMemberPath="Name" SelectedValuePath="EmployeeId"/>

                <Label Content="Order Date:" HorizontalAlignment="Left" Margin="320,20,0,0" VerticalAlignment="Top"/>
                <DatePicker x:Name="dpOrderDate" HorizontalAlignment="Left" Margin="400,20,0,0" Width="120" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>

        <!-- Order Details -->
        <GroupBox Header="Order Details" Margin="20,210,20,100">
            <DataGrid x:Name="dgOrderDetails" AutoGenerateColumns="False" 
                     CanUserAddRows="False" CanUserDeleteRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product ID" Binding="{Binding ProductId}" Width="80" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Product Name" Binding="{Binding Product.ProductName}" Width="150" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice}" Width="80"/>
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                    <DataGridTextColumn Header="Discount" Binding="{Binding Discount}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <Button x:Name="btn_Save" Content="Save" HorizontalAlignment="Right" Margin="0,0,100,30" 
                Width="80" Height="30" VerticalAlignment="Bottom" Click="btn_Save_Click"/>
        <Button x:Name="btn_Cancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,30" 
                Width="80" Height="30" VerticalAlignment="Bottom" Click="btn_Cancel_Click"/>
    </Grid>
</Window>