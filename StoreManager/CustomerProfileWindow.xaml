<Window x:Class="StoreManager.CustomerProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreManager"
        mc:Ignorable="d"
        Title="My Profile" Height="500" Width="600" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource HeaderBorderStyle}">
            <TextBlock Text="👤 My Profile" Style="{StaticResource HeaderStyle}"/>
        </Border>
        
        <!-- Profile Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="40,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Customer ID (Read-only) -->
                <TextBlock Grid.Row="0" Text="Customer ID" Style="{StaticResource CommonLabelStyle}"/>
                <TextBox Grid.Row="1" x:Name="txtCustomerId" 
                         Style="{StaticResource CommonTextBoxStyle}"
                         IsReadOnly="True" Background="{StaticResource LightGrayBrush}"/>
                
                <!-- Company Name -->
                <TextBlock Grid.Row="2" Text="Company Name" Style="{StaticResource CommonLabelStyle}" Margin="0,20,0,0"/>
                <TextBox Grid.Row="3" x:Name="txtCompanyName" 
                         Style="{StaticResource CommonTextBoxStyle}"/>
                
                <!-- Contact Name -->
                <TextBlock Grid.Row="4" Text="Contact Name" Style="{StaticResource CommonLabelStyle}" Margin="0,20,0,0"/>
                <TextBox Grid.Row="5" x:Name="txtContactName" 
                         Style="{StaticResource CommonTextBoxStyle}"/>
                
                <!-- Contact Title -->
                <TextBlock Grid.Row="6" Text="Contact Title" Style="{StaticResource CommonLabelStyle}" Margin="0,20,0,0"/>
                <TextBox Grid.Row="7" x:Name="txtContactTitle" 
                         Style="{StaticResource CommonTextBoxStyle}"/>
                
                <!-- Address -->
                <TextBlock Grid.Row="8" Text="Address" Style="{StaticResource CommonLabelStyle}" Margin="0,20,0,0"/>
                <TextBox Grid.Row="9" x:Name="txtAddress" 
                         Style="{StaticResource CommonTextBoxStyle}"/>
                
                <!-- Phone -->
                <TextBlock Grid.Row="10" Text="Phone" Style="{StaticResource CommonLabelStyle}" Margin="0,20,0,0"/>
                <TextBox Grid.Row="11" x:Name="txtPhone" 
                         Style="{StaticResource CommonTextBoxStyle}"/>
            </Grid>
        </ScrollViewer>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnSave" Content="💾 Save Changes" 
                    Style="{StaticResource SuccessButtonStyle}"
                    Width="150" Click="btnSave_Click"/>
            
            <Button x:Name="btnCancel" Content="❌ Cancel" 
                    Style="{StaticResource CommonButtonStyle}"
                    Width="150" Margin="20,0,0,0" Click="btnCancel_Click"/>
            
            <Button x:Name="btnBack" Content="⬅️ Back to Main" 
                    Style="{StaticResource CommonButtonStyle}"
                    Width="150" Margin="20,0,0,0" Click="btnBack_Click"/>
        </StackPanel>
    </Grid>
</Window>
