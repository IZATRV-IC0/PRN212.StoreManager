<Window x:Class="StoreManager.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreManager"
        mc:Ignorable="d"
        Title="Place Order" Height="750" Width="1000" 
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50">
            <Grid>
                <TextBlock Text="📦 Place New Order" 
                           FontSize="28" FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Product Selection -->
            <GroupBox Grid.Row="0" Header="Select Products" 
                      FontSize="16" FontWeight="Bold" 
                      Margin="0,0,0,20" Padding="10"
                      Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    
                    <ComboBox x:Name="cmbProducts" Grid.Column="0" 
                              Height="35" FontSize="14"
                              VerticalContentAlignment="Center"
                              DisplayMemberPath="ProductName"
                              SelectionChanged="cmbProducts_SelectionChanged"/>
                    
                    <TextBox x:Name="txtQuantity" Grid.Column="1" 
                             Height="35" FontSize="14"
                             Text="1" Margin="10,0"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Center"/>
                    
                    <Button x:Name="btnAddProduct" Grid.Column="2" 
                            Content="➕ Add to Order" 
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#5CB85C"
                            Click="btnAddProduct_Click"/>
                </Grid>
            </GroupBox>
            
            <!-- Order Items -->
            <GroupBox Grid.Row="1" Header="Order Items" 
                      FontSize="16" FontWeight="Bold">
                <DataGrid x:Name="dgOrderItems" 
                          Margin="10"
                          CanUserDeleteRows="False"
                          CanUserAddRows="False"
                          CanUserSortColumns="False"
                          CanUserReorderColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="250" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding CategoryName}" Width="150" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, StringFormat=C}" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80" IsReadOnly="False">
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <EventSetter Event="LostFocus" Handler="QuantityTextBox_LostFocus"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C}" Width="100" IsReadOnly="True"/>
                        <DataGridTemplateColumn Header="Actions" Width="100" CanUserSort="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="❌ Remove" 
                                            Background="#D9534F"
                                            Style="{StaticResource ActionButtonStyle}"
                                            Width="80" Height="30"
                                            Tag="{Binding}"
                                            Click="btnRemoveItem_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
        
        <!-- Order Summary -->
        <Border Grid.Row="2" Background="#F8F9FA" 
                BorderBrush="#DEE2E6" BorderThickness="0,1,0,0">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Order Summary" Grid.Row="0"
                           FontSize="18" FontWeight="Bold" 
                           Margin="0,0,0,10"/>
                
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock FontSize="14" Margin="0,5">
                            <Run Text="Customer: " FontWeight="Bold"/>
                            <Run x:Name="txtCustomerName" Text=""/>
                        </TextBlock>
                        <TextBlock FontSize="14" Margin="0,5">
                            <Run Text="Order Date: " FontWeight="Bold"/>
                            <Run x:Name="txtOrderDate" Text=""/>
                        </TextBlock>
                        <TextBlock FontSize="14" Margin="0,5">
                            <Run Text="Total Items: " FontWeight="Bold"/>
                            <Run x:Name="txtTotalItems" Text="0"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock FontSize="24" FontWeight="Bold" 
                                   HorizontalAlignment="Right">
                            <Run Text="Total: "/>
                            <Run x:Name="txtTotalAmount" Text="$0.00"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
        
        <!-- Footer Buttons -->
        <Border Grid.Row="3" Background="#ECF0F1">
            <Grid>
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                    <Button x:Name="btnPlaceOrder" Content="✅ Place Order" 
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#5CB85C"
                            Width="150" Height="45"
                            FontSize="16"
                            Click="btnPlaceOrder_Click"/>
                    
                    <Button x:Name="btnCancel" Content="Cancel" 
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#95A5A6"
                            Width="120" Height="45"
                            Margin="20,0,0,0"
                            Click="btnCancel_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
