<Window x:Class="StoreManager.ManageCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreManager"
        mc:Ignorable="d"
        Title="Manage Category" Height="550" Width="600" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        AllowsTransparency="False" WindowStyle="SingleBorderWindow"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Gradient Brushes (matching MainWindow) -->
        <LinearGradientBrush x:Key="MainBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#f8f9ff" Offset="0"/>
            <GradientStop Color="#e6e9ff" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="HeaderBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#667eea" Offset="0"/>
            <GradientStop Color="#764ba2" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#ffffff" Offset="0"/>
            <GradientStop Color="#f8f9ff" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SuccessButtonBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#56ab2f" Offset="0"/>
            <GradientStop Color="#a8e6cf" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SecondaryButtonBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#6c757d" Offset="0"/>
            <GradientStop Color="#495057" Offset="1"/>
        </LinearGradientBrush>

        <!-- Modern Button Style (matching MainWindow) -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="22"
                                x:Name="border">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.2" BlurRadius="8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style (matching MainWindow) -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" 
                                      Opacity="0.1" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Style (matching MainWindow) -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="ModernLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="10"
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    x:Name="border">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" 
                                                      Opacity="0.05" BlurRadius="5"/>
                                </Border.Effect>
                            </Border>
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalScrollBarVisibility="{TemplateBinding VerticalScrollBarVisibility}"
                                          HorizontalScrollBarVisibility="{TemplateBinding HorizontalScrollBarVisibility}"
                                          Background="Transparent"
                                          BorderThickness="0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#667eea"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#667eea" Direction="270" ShadowDepth="0" 
                                                          Opacity="0.3" BlurRadius="10"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsReadOnly" Value="True">
                                <Setter Property="Background" Value="#f8f9ff"/>
                                <Setter Property="BorderBrush" Value="#d0d0d0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Grid Background="{StaticResource MainBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource HeaderBrush}" CornerRadius="0,0,25,25">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" 
                                  Opacity="0.2" BlurRadius="15"/>
            </Border.Effect>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="📂" FontSize="30" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock x:Name="lblEditor" Text="Manage Category" 
                           Style="{StaticResource HeaderStyle}"/>
            </StackPanel>
        </Border>

        <!-- Form Content -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="20,10,20,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="30,25">
                <StackPanel>
                    <!-- Category ID -->
                    <StackPanel x:Name="pnlCategoryID" Margin="0,0,0,20">
                        <TextBlock x:Name="lblCategoryID" Text="Category ID" 
                                   Style="{StaticResource ModernLabelStyle}"/>
                        <TextBox x:Name="txtCategoryID" 
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 IsReadOnly="True" Height="45"/>
                    </StackPanel>

                    <!-- Category Name -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Category Name *" 
                                   Style="{StaticResource ModernLabelStyle}"/>
                        <TextBox x:Name="txtCategoryName" 
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 MinHeight="45"
                                 VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Description -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Description" 
                                   Style="{StaticResource ModernLabelStyle}"/>
                        <TextBox x:Name="txtDescription" 
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Height="100" AcceptsReturn="True" TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 VerticalContentAlignment="Top"/>
                    </StackPanel>

                    <!-- Required fields note -->
                    <Border Background="#fff3cd" BorderBrush="#ffeaa7" BorderThickness="1" 
                            CornerRadius="8" Padding="12,8" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💡" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Fields marked with * are required" 
                                       FontSize="12" FontStyle="Italic" 
                                       Foreground="#856404" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="20,10,20,20">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <Button x:Name="btn_SaveCategory" Content="💾 Save" 
                        Style="{StaticResource ModernButtonStyle}"
                        Background="{StaticResource SuccessButtonBrush}"
                        Width="140" Margin="0,0,20,0"
                        Click="btn_SaveCategory_Click"/>
                <Button x:Name="btn_CancelCategory" Content="❌ Cancel" 
                        Style="{StaticResource ModernButtonStyle}"
                        Background="{StaticResource SecondaryButtonBrush}"
                        Width="140"
                        Click="btn_CancelCategory_Click"/>
            </StackPanel>
        </Border>

        <!-- Decorative Elements (matching MainWindow) -->
        <Ellipse Width="80" Height="80" 
                 Fill="#10667eea" 
                 HorizontalAlignment="Right" VerticalAlignment="Top"
                 Margin="0,-40,-40,0"/>

        <Rectangle Width="100" Height="100" 
                   Fill="#05f093fb" 
                   HorizontalAlignment="Left" VerticalAlignment="Bottom"
                   Margin="-50,0,0,-50">
            <Rectangle.RenderTransform>
                <RotateTransform Angle="45"/>
            </Rectangle.RenderTransform>
        </Rectangle>
    </Grid>
</Window>