<Window x:Class="StoreManager.ManageCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreManager"
        mc:Ignorable="d"
        Title="Manage Category" Height="450" Width="500" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource HeaderBorderStyle}">
            <TextBlock x:Name="lblEditor" Text="Manage Category" 
                       Style="{StaticResource HeaderStyle}"/>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
            <StackPanel>
                <!-- Category ID -->
                <StackPanel x:Name="pnlCategoryID" Margin="0,0,0,15">
                    <TextBlock x:Name="lblCategoryID" Text="Category ID" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtCategoryID" 
                             Style="{StaticResource CommonTextBoxStyle}"
                             IsReadOnly="True" Background="#F0F0F0"/>
                </StackPanel>

                <!-- Category Name -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Category Name *" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtCategoryName" 
                             Style="{StaticResource CommonTextBoxStyle}"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Description" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtDescription" 
                             Style="{StaticResource CommonTextBoxStyle}"
                             Height="80" AcceptsReturn="True" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"/>
                </StackPanel>

                <!-- Required fields note -->
                <TextBlock Text="* Required fields" 
                           FontSize="11" FontStyle="Italic" 
                           Foreground="#666666" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <Button x:Name="btn_SaveCategory" Content="💾 Save" 
                        Style="{StaticResource SuccessButtonStyle}" 
                        Width="120" Height="40" Margin="0,0,15,0"
                        Click="btn_SaveCategory_Click"/>
                <Button x:Name="btn_CancelCategory" Content="❌ Cancel" 
                        Style="{StaticResource CommonButtonStyle}" 
                        Width="120" Height="40" Background="#6C757D"
                        Click="btn_CancelCategory_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>