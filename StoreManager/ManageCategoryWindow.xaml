<Window x:Class="StoreManager.ManageCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Category Window" Height="350" Width="600" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="lblCategoryID" Content="Category ID" FontSize="16" HorizontalAlignment="Left" Margin="40,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtCategoryID" HorizontalAlignment="Left" Margin="180,45,0,0" Width="200" VerticalAlignment="Top"/>

        <Label Content="Category Name" FontSize="16" HorizontalAlignment="Left" Margin="40,90,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtCategoryName" HorizontalAlignment="Left" Margin="180,95,0,0" Width="200" VerticalAlignment="Top" MaxLength="15"/>

        <Label Content="Description" FontSize="16" HorizontalAlignment="Left" Margin="40,140,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDescription" HorizontalAlignment="Left" Margin="180,145,0,0" Width="300" Height="60" VerticalAlignment="Top" TextWrapping="Wrap" AcceptsReturn="True"/>

        <Button x:Name="btn_SaveCategory" Content="Save" HorizontalAlignment="Left" Margin="180,230,0,0" Width="100" VerticalAlignment="Top" Click="btn_SaveCategory_Click"/>
        <Button x:Name="btn_CancelCategory" Content="Cancel" HorizontalAlignment="Left" Margin="300,230,0,0" Width="100" VerticalAlignment="Top" Click="btn_CancelCategory_Click"/>

        <Label x:Name="lblEditor" Content="Create/Update Category" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="40,0,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
