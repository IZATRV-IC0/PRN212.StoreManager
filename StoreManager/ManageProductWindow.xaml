<Window x:Class="StoreManager.ManageProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreManager"
        mc:Ignorable="d"
        Title="Manage Product" Height="700" Width="500" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource HeaderBorderStyle}">
            <TextBlock x:Name="lblEditor" Text="Manage Product" 
                       Style="{StaticResource HeaderStyle}"/>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
            <StackPanel>
                <!-- Product ID -->
                <StackPanel x:Name="pnlProductID" Margin="0,0,0,15">
                    <TextBlock x:Name="lblProductID" Text="Product ID" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtProductID" 
                             Style="{StaticResource CommonTextBoxStyle}"
                             IsReadOnly="True" Background="#F0F0F0"/>
                </StackPanel>

                <!-- Product Name -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Product Name *" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtProductName" 
                             Style="{StaticResource CommonTextBoxStyle}"/>
                </StackPanel>

                <!-- Supplier ID -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Supplier ID" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtSupplierID" 
                             Style="{StaticResource CommonTextBoxStyle}"/>
                </StackPanel>

                <!-- Category -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Category *" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <ComboBox x:Name="cboCategory" 
                              Height="35" FontSize="14" Margin="0,0,0,10"
                              DisplayMemberPath="CategoryName" 
                              SelectedValuePath="CategoryId"/>
                </StackPanel>

                <!-- Quantity Per Unit -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Quantity Per Unit" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtQuantityPerUnit" 
                             Style="{StaticResource CommonTextBoxStyle}"/>
                </StackPanel>

                <!-- Unit Price -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Unit Price *" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtUnitPrice" 
                             Style="{StaticResource CommonTextBoxStyle}"/>
                </StackPanel>

                <!-- Units In Stock -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Units In Stock" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtUnitsInStock" 
                             Style="{StaticResource CommonTextBoxStyle}"/>
                </StackPanel>

                <!-- Units On Order -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Units On Order" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtUnitsOnOrder" 
                             Style="{StaticResource CommonTextBoxStyle}"/>
                </StackPanel>

                <!-- Reorder Level -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Reorder Level" 
                               Style="{StaticResource CommonLabelStyle}"/>
                    <TextBox x:Name="txtReorderLevel" 
                             Style="{StaticResource CommonTextBoxStyle}"/>
                </StackPanel>

                <!-- Discontinued -->
                <StackPanel Margin="0,0,0,15">
                    <CheckBox x:Name="chkDiscontinued" Content="Discontinued" 
                              FontSize="14" FontWeight="SemiBold" 
                              Foreground="#333333" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Required fields note -->
                <TextBlock Text="* Required fields" 
                           FontSize="11" FontStyle="Italic" 
                           Foreground="#666666" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <Button x:Name="btn_SaveProduct" Content="💾 Save" 
                        Style="{StaticResource SuccessButtonStyle}" 
                        Width="120" Height="40" Margin="0,0,15,0"
                        Click="btn_SaveProduct_Click"/>
                <Button x:Name="btn_CancelProduct" Content="❌ Cancel" 
                        Style="{StaticResource CommonButtonStyle}" 
                        Width="120" Height="40" Background="#6C757D"
                        Click="btn_CancelProduct_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>