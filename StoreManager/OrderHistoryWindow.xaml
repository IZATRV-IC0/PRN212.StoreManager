<Window x:Class="StoreManager.OrderHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreManager"
        mc:Ignorable="d"
        Title="Order History" Height="700" Width="1200" 
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50">
            <Grid>
                <TextBlock Text="ðŸ“‹ My Order History" 
                           FontSize="28" FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Orders List -->
        <GroupBox Grid.Row="1" Header="Orders" 
                  FontSize="16" FontWeight="Bold"
                  Margin="20,20,20,10">
            <DataGrid x:Name="dgOrders" 
                      Margin="10"
                      SelectionMode="Single"
                      IsReadOnly="True"
                      SelectionChanged="dgOrders_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Order ID" Binding="{Binding OrderId}" Width="80"/>
                    <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate, StringFormat=yyyy-MM-dd HH:mm}" Width="150"/>
                    <DataGridTextColumn Header="Employee" Binding="{Binding Employee.Name}" Width="150"/>
                    <DataGridTextColumn Header="Total Items" Binding="{Binding TotalItems}" Width="100"/>
                    <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount, StringFormat=C}" Width="120"/>
                    <DataGridTemplateColumn Header="Actions" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="View Details" 
                                        Style="{StaticResource ActionButtonStyle}"
                                        Width="90" Height="28"
                                        Tag="{Binding}"
                                        Click="btnViewDetails_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        
        <!-- Order Details -->
        <GroupBox Grid.Row="2" Header="Order Details" 
                  FontSize="16" FontWeight="Bold"
                  Margin="20,0,20,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" x:Name="txtSelectedOrder" 
                           Text="Select an order to view details"
                           FontSize="14" FontWeight="Normal" 
                           FontStyle="Italic" Foreground="#666"
                           Margin="10,10,10,5"/>
                
                <DataGrid Grid.Row="1" x:Name="dgOrderDetails" 
                          Margin="10,0,10,10"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Product" Binding="{Binding Product.ProductName}" Width="300"/>
                        <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, StringFormat=C}" Width="100"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                        <DataGridTextColumn Header="Discount" Binding="{Binding Discount, StringFormat=P}" Width="80"/>
                        <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>
        
        <!-- Footer -->
        <Border Grid.Row="3" Background="#ECF0F1">
            <Grid>
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center"
                            Margin="20,0">
                    <TextBlock Text="Total Orders: " FontSize="16" FontWeight="Medium"/>
                    <TextBlock x:Name="lblTotalOrders" Text="0" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="   |   Total Spent: " FontSize="16" FontWeight="Medium" Margin="20,0,0,0"/>
                    <TextBlock x:Name="lblTotalSpent" Text="$0.00" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Margin="0,0,20,0">
                    <Button x:Name="btnRefresh" Content="ðŸ”„ Refresh" 
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#5CB85C"
                            Width="100"
                            Click="btnRefresh_Click"/>
                    
                    <Button x:Name="btnClose" Content="Close" 
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#95A5A6"
                            Width="100"
                            Margin="10,0,0,0"
                            Click="btnClose_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
