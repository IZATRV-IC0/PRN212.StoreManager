<Window x:Class="StoreManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreManager"
        mc:Ignorable="d"
        Title="Store Manager - Dashboard" Height="900" Width="1400" 
        ResizeMode="CanResize" WindowStartupLocation="CenterScreen"
        AllowsTransparency="False" WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="MainBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#f8f9ff" Offset="0"/>
            <GradientStop Color="#e6e9ff" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SidebarBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#667eea" Offset="0"/>
            <GradientStop Color="#764ba2" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#ffffff" Offset="0"/>
            <GradientStop Color="#f8f9ff" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PrimaryButtonBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#667eea" Offset="0"/>
            <GradientStop Color="#764ba2" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SecondaryButtonBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#f093fb" Offset="0"/>
            <GradientStop Color="#f5576c" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SuccessButtonBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#56ab2f" Offset="0"/>
            <GradientStop Color="#a8e6cf" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="WarningButtonBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#f7971e" Offset="0"/>
            <GradientStop Color="#ffd200" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DangerButtonBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#e74c3c" Offset="0"/>
            <GradientStop Color="#c0392b" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SearchButtonBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#4facfe" Offset="0"/>
            <GradientStop Color="#00f2fe" Offset="1"/>
        </LinearGradientBrush>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="22"
                                x:Name="border">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.2" BlurRadius="8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25"
                                x:Name="border">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#30ffffff"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#20ffffff"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="AlternatingRowBackground" Value="#f8f9ff"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" 
                                      Opacity="0.1" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="20,10"/>
        </Style>

        <!-- Subheader Style -->
        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Margin" Value="20,5"/>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E0E6ED"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                x:Name="border">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Stretch"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#667eea"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E0E6ED"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton" 
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          Background="{TemplateBinding Background}"
                                          Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <Path x:Name="Arrow" Grid.Column="1" 
                                                      Fill="#666"
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"
                                                      Data="M 0 0 L 4 4 L 8 0 Z"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite"
                                              IsHitTestVisible="False" 
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="15,10"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" 
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="White"
                                            BorderThickness="1"
                                            BorderBrush="#E0E6ED"
                                            CornerRadius="12"/>
                                    <ScrollViewer Margin="4,6,4,6" 
                                                  SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" 
                                                    KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Grid Background="{StaticResource MainBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="0" ShadowDepth="5" 
                                  Opacity="0.2" BlurRadius="15"/>
            </Border.Effect>

            <StackPanel Margin="0,20">
                <!-- Logo/Header -->
                <Border Background="#30ffffff" CornerRadius="20" Margin="20,0,20,20" Padding="20">
                    <StackPanel>
                        <Ellipse Width="60" Height="60" Fill="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="🏪" FontSize="30" HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" Margin="0,-45,0,0"/>
                        <TextBlock x:Name="lblRole" Text="ADMIN" FontSize="20" FontWeight="Bold" 
                                   Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        <TextBlock x:Name="lbl_NameGreeting" Text="Welcome, Manager!" 
                                   FontSize="14" Foreground="#E0E0E0" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Menu -->
                <StackPanel Margin="0,20,0,0">
                    <Button x:Name="btn_CustomerMenu" Content="👥 Customer Management" 
                            Style="{StaticResource SidebarButtonStyle}" 
                            Click="btn_CustomerMenu_Click"/>

                    <Button x:Name="btn_EmployeeMenu" Content="🧑‍💼 Employee Management" 
                            Style="{StaticResource SidebarButtonStyle}" 
                            Click="btn_EmployeeMenu_Click"/>

                    <Button x:Name="btn_Product" Content="📦 Product Management" 
                            Style="{StaticResource SidebarButtonStyle}" 
                            Click="btn_Product_Click"/>

                    <Button x:Name="btn_Category" Content="📂 Category Management" 
                            Style="{StaticResource SidebarButtonStyle}" 
                            Click="btn_Category_Click"/>

                    <Button x:Name="btn_OrderManager" Content="📋 Order Management" 
                            Style="{StaticResource SidebarButtonStyle}" 
                            Click="btn_OrderManager_Click"/>
                </StackPanel>

                <!-- Logout Button at Bottom -->
                <Button x:Name="btn_Logout" Content="🚪 Logout" 
                        Style="{StaticResource SidebarButtonStyle}"
                        Background="#30ff0000" 
                        VerticalAlignment="Bottom" 
                        Margin="10,50,10,20"
                        Click="btn_Logout_Click"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Content Header -->
            <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" Margin="20,15">
                    <TextBlock Text="📊 Dashboard" Style="{StaticResource HeaderStyle}" Margin="0"/>
                    <TextBlock Text="Manage your store efficiently" Style="{StaticResource SubHeaderStyle}" 
                               VerticalAlignment="Bottom" Margin="20,0,0,5"/>
                </StackPanel>
            </Border>

            <!-- Search Controls -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,10"
                    x:Name="SearchSection" Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" Margin="20,15" HorizontalAlignment="Right">
                    <!-- Category ComboBox (for Product search) -->
                    <ComboBox x:Name="cboxProductCategorySearch" 
                              Style="{StaticResource ModernComboBoxStyle}"
                              Width="180" Height="45" Margin="0,0,10,0"
                              Visibility="Collapsed"/>

                    <!-- Search Label and TextBox -->
                    <TextBlock x:Name="lblSearch" Text="Search by Name:" 
                               FontSize="14" FontWeight="SemiBold" 
                               Foreground="#555" VerticalAlignment="Center" 
                               Margin="0,0,10,0" Visibility="Collapsed"/>

                    <TextBox x:Name="txtSearchValue" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Width="200" Height="60" 
                             Margin="0,0,10,0"
                             Visibility="Collapsed"/>

                    <!-- Search Button -->
                    <Button x:Name="btnSearch" Content="🔍 Search" 
                            Style="{StaticResource ModernButtonStyle}"
                            Background="{StaticResource SearchButtonBrush}"
                            Width="120" Height="45"
                            Visibility="Collapsed"
                            Click="btn_Search_Clicked"/>
                </StackPanel>
            </Border>

            <!-- Main Data Display Area -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                <Grid Margin="20">
                    <!-- Customer DataGrid -->
                    <DataGrid x:Name="dgCustomer" Style="{StaticResource ModernDataGridStyle}" 
                              Visibility="Visible">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding CustomerId}" Width="80"/>
                            <DataGridTextColumn Header="Company Name" Binding="{Binding CompanyName}" Width="200"/>
                            <DataGridTextColumn Header="Contact Name" Binding="{Binding ContactName}" Width="150"/>
                            <DataGridTextColumn Header="Contact Title" Binding="{Binding ContactTitle}" Width="150"/>
                            <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="200"/>
                            <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Employee DataGrid -->
                    <DataGrid x:Name="dgEmployee" Style="{StaticResource ModernDataGridStyle}" 
                              Visibility="Collapsed">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding EmployeeId}" Width="60"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="User Name" Binding="{Binding UserName}" Width="120"/>
                            <DataGridTextColumn Header="Job Title" Binding="{Binding JobTitle}" Width="150"/>
                            <DataGridTextColumn Header="Birth Date" Binding="{Binding BirthDate}" Width="120"/>
                            <DataGridTextColumn Header="Hire Date" Binding="{Binding HireDate}" Width="120"/>
                            <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="200"/>
                            <DataGridTextColumn Header="Role" Binding="{Binding RoleNum}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Product DataGrid -->
                    <DataGrid x:Name="dgProduct" Style="{StaticResource ModernDataGridStyle}" 
                              Visibility="Collapsed">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="60"/>
                            <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="150"/>
                            <DataGridTextColumn Header="Supplier ID" Binding="{Binding SupplierId}" Width="100"/>
                            <DataGridTextColumn Header="Quantity/Unit" Binding="{Binding QuantityPerUnit}" Width="120"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding UnitPrice}" Width="80"/>
                            <DataGridTextColumn Header="Units" Binding="{Binding UnitsInStock}" Width="80"/>
                            <DataGridTextColumn Header="Unit Orders" Binding="{Binding UnitsOnOrder}" Width="100"/>
                            <DataGridTextColumn Header="Reorder Level" Binding="{Binding ReorderLevel}" Width="100"/>
                            <DataGridCheckBoxColumn Header="Discontinued" Binding="{Binding Discontinued}" Width="100"/>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category.CategoryName}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Category DataGrid -->
                    <DataGrid x:Name="dgCategory" Style="{StaticResource ModernDataGridStyle}" 
                              Visibility="Collapsed">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding CategoryId}" Width="80"/>
                            <DataGridTextColumn Header="Category Name" Binding="{Binding CategoryName}" Width="200"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Order DataGrid -->
                    <DataGrid x:Name="dgOrder" Style="{StaticResource ModernDataGridStyle}" 
                              Visibility="Collapsed" SelectionChanged="dgOrder_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding OrderId}" Width="80"/>
                            <DataGridTextColumn Header="Customer Id" Binding="{Binding CustomerId}" Width="100"/>
                            <DataGridTextColumn Header="Customer Name" Binding="{Binding Customer.ContactName}" Width="150"/>
                            <DataGridTextColumn Header="Employee Id" Binding="{Binding EmployeeId}" Width="100"/>
                            <DataGridTextColumn Header="Employee Name" Binding="{Binding Employee.Name}" Width="150"/>
                            <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Order Detail Section (Only visible when Order is selected) -->
            <Border Grid.Row="3" Style="{StaticResource CardStyle}" x:Name="OrderDetailSection" 
                    Visibility="Collapsed" Height="200">
                <Grid Margin="20">
                    <TextBlock Text="📋 Order Details" Style="{StaticResource SubHeaderStyle}" Margin="0,0,0,10"/>
                    <DataGrid x:Name="dgOrderDetail" Style="{StaticResource ModernDataGridStyle}" 
                              Margin="0,35,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Order ID" Binding="{Binding OrderId}" Width="80"/>
                            <DataGridTextColumn Header="Product ID" Binding="{Binding ProductId}" Width="80"/>
                            <DataGridTextColumn Header="Product Name" Binding="{Binding Product.ProductName}" Width="150"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding UnitPrice}" Width="80"/>
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                            <DataGridTextColumn Header="Discount" Binding="{Binding Discount}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <Border Grid.Row="4" Style="{StaticResource CardStyle}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,15">
                    <Button x:Name="btn_Create" Content="➕ Create" 
                            Style="{StaticResource ModernButtonStyle}"
                            Background="{StaticResource SuccessButtonBrush}"
                            Width="120" Click="btn_Create_Click"/>

                    <Button x:Name="btn_Update" Content="✏️ Update" 
                            Style="{StaticResource ModernButtonStyle}"
                            Background="{StaticResource WarningButtonBrush}"
                            Width="120" Click="btn_Update_Click"/>

                    <Button x:Name="btn_Delete" Content="🗑️ Delete" 
                            Style="{StaticResource ModernButtonStyle}"
                            Background="{StaticResource DangerButtonBrush}"
                            Width="120" Click="btn_Delete_Click"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Decorative Elements -->
        <Ellipse Width="100" Height="100" 
                 Fill="#10667eea" 
                 HorizontalAlignment="Right" VerticalAlignment="Top"
                 Margin="0,-50,-50,0" Grid.Column="1"/>

        <Rectangle Width="200" Height="200" 
                   Fill="#05f093fb" 
                   HorizontalAlignment="Right" VerticalAlignment="Bottom"
                   Margin="0,0,-100,-100" Grid.Column="1">
            <Rectangle.RenderTransform>
                <RotateTransform Angle="45"/>
            </Rectangle.RenderTransform>
        </Rectangle>
    </Grid>
</Window>