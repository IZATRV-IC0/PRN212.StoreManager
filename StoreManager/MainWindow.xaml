<Window x:Class="StoreManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreManager"
        mc:Ignorable="d"
        Title="Store Manager Dashboard" Height="600" Width="1000" 
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50">
            <Grid>
                <Label x:Name="lblRole" Content="Role" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                       FontSize="32" FontWeight="Bold" Foreground="White"/>
                <Label x:Name="lblUserInfo" Content="" 
                       HorizontalAlignment="Right" VerticalAlignment="Center" 
                       FontSize="14" Foreground="White" Margin="0,0,20,0"/>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <!-- Employee Menu -->
            <StackPanel x:Name="pnlEmployeeMenu" Visibility="Collapsed">
                <TextBlock Text="Employee Functions" FontSize="20" FontWeight="Bold" 
                           Margin="0,0,0,20" HorizontalAlignment="Center"/>
                <!-- Employee menu items will be added here based on role -->
            </StackPanel>
            
            <!-- Customer Menu -->
            <StackPanel x:Name="pnlCustomerMenu" Visibility="Collapsed">
                <TextBlock Text="Customer Dashboard" FontSize="24" FontWeight="Bold" 
                           Margin="0,0,0,30" HorizontalAlignment="Center"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="20,0">
                        <Button Name="btnViewProducts" Content="🛒 View Products" 
                                Style="{StaticResource MenuButtonStyle}"
                                Height="80" FontSize="18"
                                Click="btnViewProducts_Click"/>
                        
                        <Button Name="btnPlaceOrder" Content="📦 Place Order (0)" 
                                Style="{StaticResource MenuButtonStyle}"
                                Height="80" FontSize="18"
                                Background="#5CB85C"
                                Click="btnPlaceOrder_Click"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="20,0">
                        <Button Name="btnOrderHistory" Content="📋 Order History" 
                                Style="{StaticResource MenuButtonStyle}"
                                Height="80" FontSize="18"
                                Background="#F0AD4E"
                                Click="btnOrderHistory_Click"/>
                        
                        <Button Name="btnMyProfile" Content="👤 My Profile" 
                                Style="{StaticResource MenuButtonStyle}"
                                Height="80" FontSize="18"
                                Background="#5BC0DE"
                                Click="btnMyProfile_Click"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#ECF0F1">
            <Grid>
                <Button x:Name="btn_Logout" Content="🚪 Logout" 
                        HorizontalAlignment="Right" Margin="0,0,20,0" 
                        VerticalAlignment="Center" Width="120" Height="40"
                        Background="#E74C3C" Foreground="White"
                        FontWeight="Bold" BorderThickness="0"
                        Cursor="Hand" Click="btn_Logout_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
