<Window x:Class="StoreManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreManager"
        mc:Ignorable="d"
        Title="Management Window" Height="800" Width="1200" 
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize">

    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50">
            <Grid>
                <Label x:Name="lblRole" Content="Admin Dashboard" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                       FontSize="32" FontWeight="Bold" Foreground="White"/>
                <Label x:Name="lbl_NameGreeting" Content="" 
                       HorizontalAlignment="Right" VerticalAlignment="Center" 
                       FontSize="14" Foreground="White" Margin="0,0,20,0"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <!-- Admin Management Menu -->
            <StackPanel x:Name="pnlAdminMenu" Margin="20">
                <TextBlock Text="Management Dashboard" FontSize="24" FontWeight="Bold" 
                           Margin="0,0,0,30" HorizontalAlignment="Center"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- First Row -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="20,0">
                        <Button x:Name="btn_CustomerMenu" Content="👥 Managing Customer" 
                                Style="{StaticResource MenuButtonStyle}"
                                Height="80" FontSize="18"
                                Background="#4A90E2"
                                Click="btn_CustomerMenu_Click"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="20,0">
                        <Button x:Name="btn_EmployeeMenu" Content="👨‍💼 Managing Employee" 
                                Style="{StaticResource MenuButtonStyle}"
                                Height="80" FontSize="18"
                                Background="#5CB85C"
                                Click="btn_EmployeeMenu_Click"/>
                    </StackPanel>

                    <!-- Second Row -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="20,0">
                        <Button x:Name="btn_Product" Content="📦 Managing Product" 
                                Style="{StaticResource MenuButtonStyle}"
                                Height="80" FontSize="18"
                                Background="#F0AD4E"
                                Click="btn_Product_Click"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="20,0">
                        <Button x:Name="btn_Category" Content="🏷️ Managing Category" 
                                Style="{StaticResource MenuButtonStyle}"
                                Height="80" FontSize="18"
                                Background="#5BC0DE"
                                Click="btn_Category_Click"/>
                    </StackPanel>

                    <!-- Third Row - Center the Order Management button -->
                    <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                                HorizontalAlignment="Center" Margin="20,0">
                        <Button x:Name="btn_OrderManager" Content="📋 Managing Order" 
                                Style="{StaticResource MenuButtonStyle}"
                                Height="80" FontSize="18" Width="300"
                                Background="#D9534F"
                                Click="btn_OrderManager_Click"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Staff Menu -->
            <StackPanel x:Name="pnlStaffMenu" Margin="20" Visibility="Collapsed">
                <TextBlock Text="Staff Dashboard" FontSize="24" FontWeight="Bold" 
                           Margin="0,0,0,30" HorizontalAlignment="Center"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- First Row -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="20,0">
                        <Button x:Name="btn_Staff_CreateOrder" Content="📝 Create New Order" 
                                Style="{StaticResource MenuButtonStyle}"
                                Height="80" FontSize="18"
                                Background="#5CB85C"
                                Click="btn_Staff_CreateOrder_Click"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="20,0">
                        <Button x:Name="btn_Staff_ViewProducts" Content="📦 View Products" 
                                Style="{StaticResource MenuButtonStyle}"
                                Height="80" FontSize="18"
                                Background="#4A90E2"
                                Click="btn_Staff_ViewProducts_Click"/>
                    </StackPanel>

                    <!-- Second Row -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="20,0">
                        <Button x:Name="btn_Staff_ManageCustomers" Content="👥 Manage Customers" 
                                Style="{StaticResource MenuButtonStyle}"
                                Height="80" FontSize="18"
                                Background="#F0AD4E"
                                Click="btn_Staff_ManageCustomers_Click"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="20,0">
                        <Button x:Name="btn_Staff_MyOrders" Content="📋 My Orders" 
                                Style="{StaticResource MenuButtonStyle}"
                                Height="80" FontSize="18"
                                Background="#5BC0DE"
                                Click="btn_Staff_MyOrders_Click"/>
                    </StackPanel>

                    <!-- Third Row - View Categories -->
                    <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                                HorizontalAlignment="Center" Margin="20,0">
                        <Button x:Name="btn_Staff_ViewCategories" Content="🏷️ View Categories" 
                                Style="{StaticResource MenuButtonStyle}"
                                Height="80" FontSize="18" Width="300"
                                Background="#D9534F"
                                Click="btn_Staff_ViewCategories_Click"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Data Management Area (Initially Hidden) -->
            <Grid x:Name="pnlDataManagement" Margin="20" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

        <!-- Search Controls -->
                <Border Grid.Row="0" Background="White" Padding="15" Margin="0,0,0,15"
                        BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <Label x:Name="lblSearch" Content="Search:" VerticalAlignment="Center" 
                               FontWeight="SemiBold" Margin="0,0,10,0" Visibility="Collapsed"/>
                        <TextBox x:Name="txtSearchValue" Width="200" Height="30" 
                                 VerticalContentAlignment="Center" Margin="0,0,10,0" 
                                 Visibility="Collapsed"/>
                        <ComboBox x:Name="cboxProductCategorySearch" Width="150" Height="30" 
                                  VerticalContentAlignment="Center" Margin="0,0,10,0"
                                  Visibility="Collapsed"/>
                        <Button x:Name="btnSearch" Content="🔍 Search" 
                                Style="{StaticResource CommonButtonStyle}"
                                Height="30" Padding="15,0"
                                Click="btn_Search_Clicked" Visibility="Collapsed"/>
                        <Button Content="⬅️ Back to Menu" 
                                Style="{StaticResource CommonButtonStyle}"
                                Height="30" Padding="15,0" Margin="20,0,0,0"
                                Click="btnBackToMenu_Click"/>
                    </StackPanel>
                </Border>

                <!-- DataGrids -->
                <Grid Grid.Row="1">
                    <!-- Customer DataGrid -->
                    <DataGrid x:Name="dgCustomer" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CustomerId}" Width="*"/>
                <DataGridTextColumn Header="Company Name" Binding="{Binding CompanyName}" Width="*"/>
                <DataGridTextColumn Header="Contact Name" Binding="{Binding ContactName}" Width="*"/>
                <DataGridTextColumn Header="Contact Title" Binding="{Binding ContactTitle}" Width="*"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="*"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

                    <!-- Employee DataGrid -->
                    <DataGrid x:Name="dgEmployee" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding EmployeeId}" Width="*"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="User Name" Binding="{Binding UserName}" Width="*"/>
                <DataGridTextColumn Header="Job Title" Binding="{Binding JobTitle}" Width="*"/>
                <DataGridTextColumn Header="Birth Date" Binding="{Binding BirthDate}" Width="*"/>
                <DataGridTextColumn Header="Hire Date" Binding="{Binding HireDate}" Width="*"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="*"/>
                <DataGridTextColumn Header="Role" Binding="{Binding RoleNum}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

                    <!-- Product DataGrid -->
                    <DataGrid x:Name="dgProduct" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="*"/>
                <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="150"/>
                <DataGridTextColumn Header="Supplier ID" Binding="{Binding SupplierId}" Width="*"/>
                <DataGridTextColumn Header="Quantity/Unit" Binding="{Binding QuantityPerUnit}" Width="*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding UnitPrice}" Width="*"/>
                <DataGridTextColumn Header="Units" Binding="{Binding UnitsInStock}" Width="*"/>
                <DataGridTextColumn Header="Unit Orders" Binding="{Binding UnitsOnOrder}" Width="*"/>
                <DataGridTextColumn Header="Reorder Level" Binding="{Binding ReorderLevel}" Width="*"/>
                <DataGridCheckBoxColumn Header="Discontinued" Binding="{Binding Discontinued}" Width="*"/>
                <DataGridTextColumn Header="Category Name" Binding="{Binding Category.CategoryName}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

                    <!-- Category DataGrid -->
                    <DataGrid x:Name="dgCategory" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CategoryId}" Width="*"/>
                <DataGridTextColumn Header="Category Name" Binding="{Binding CategoryName}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

                    <!-- Order DataGrid -->
                    <DataGrid x:Name="dgOrder" AutoGenerateColumns="False" SelectionChanged="dgOrder_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding OrderId}" Width="*"/>
                <DataGridTextColumn Header="Customer Id" Binding="{Binding CustomerId}" Width="*"/>
                <DataGridTextColumn Header="Customer Name" Binding="{Binding Customer.ContactName}" Width="*"/>
                <DataGridTextColumn Header="Employee Id" Binding="{Binding EmployeeId}" Width="*"/>
                <DataGridTextColumn Header="Employee Name" Binding="{Binding Employee.Name}" Width="*"/>
                <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

                    <!-- Order Detail DataGrid -->
                    <DataGrid x:Name="dgOrderDetail" AutoGenerateColumns="False" Margin="0,20,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Order ID" Binding="{Binding OrderId}" Width="*"/>
                <DataGridTextColumn Header="Product ID" Binding="{Binding ProductId}" Width="*"/>
                <DataGridTextColumn Header="Product Name" Binding="{Binding Product.ProductName}" Width="*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding UnitPrice}" Width="*"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="*"/>
                <DataGridTextColumn Header="Discount" Binding="{Binding Discount}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
                </Grid>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="0,15,0,0">
                    <Button x:Name="btn_Create" Content="➕ Create" 
                            Style="{StaticResource SuccessButtonStyle}" 
                            Width="100" Margin="5,0"
                            Click="btn_Create_Click"/>
                    <Button x:Name="btn_Update" Content="✏️ Update" 
                            Style="{StaticResource CommonButtonStyle}" 
                            Width="100" Margin="5,0"
                            Click="btn_Update_Click"/>
                    <Button x:Name="btn_Delete" Content="🗑️ Delete" 
                            Style="{StaticResource CommonButtonStyle}" 
                            Width="100" Margin="5,0" Background="#D9534F"
                            Click="btn_Delete_Click"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#ECF0F1">
            <Grid>
                <Button x:Name="btn_Logout" Content="🚪 Logout" 
                        HorizontalAlignment="Right" Margin="0,0,20,0" 
                        VerticalAlignment="Center" Width="120" Height="40"
                        Background="#E74C3C" Foreground="White"
                        FontWeight="Bold" BorderThickness="0"
                        Cursor="Hand" Click="btn_Logout_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>